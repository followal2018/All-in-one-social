<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <shape>
            <size
                android:height="5dp"/>
            <solid
                android:color="#ecb600" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <size
                    android:height="10dp"/>
                <solid
                    android:color="#ecb600" />
                <corners
                    android:radius="10dp"/>
            </shape>
        </clip>
    </item>
</layer-list>